{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Express Server",
            "program": "${workspaceFolder}/app.js", // replace with the path to your server's entry point
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        //add configuration to launch.json for express debuging
        {
            "type": "node",
            "request": "launch",
            "name": "Index JS Launch Program",
            "program": "${workspaceFolder}/index.js"
        }
    ]
}